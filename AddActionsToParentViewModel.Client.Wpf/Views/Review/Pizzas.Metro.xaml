<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Controls="clr-namespace:CODE.Framework.Wpf.Controls;assembly=CODE.Framework.Wpf">
    <Style TargetType="ListBox" x:Key="PizzaList" BasedOn="{StaticResource Metro-Control-ListBox-Columns}">
        <Setter Property="Controls:ListEx.Columns">
            <Setter.Value>
                <Controls:ListColumnsCollection>
                    <Controls:ListColumn BindingPath="Text1" Header="Name" IsResizable="True" Width="150" />
                    <Controls:ListColumn BindingPath="Text2" Header="Description" IsResizable="True" Width="150" />
                </Controls:ListColumnsCollection>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
